<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nhnacademy.jdbc.board.domains.file.mapper.FileMapper">

    <select id="selectFilesByPostId" resultType="com.nhnacademy.jdbc.board.domains.file.domain.File">
        select *
        from BoardFiles
        where post_id = #{postId}
    </select>

    <insert id="insertFile">
        insert into BoardFiles (post_id, file_name, created_at)
        values (#{postId}, #{fileName}, now())
    </insert>


    <delete id="deleteFile">
        delete
        from BoardFiles
        where id = #{fileId};
    </delete>

    <delete id="deleteFileByPostId">
        delete
        from BoardFiles
        where post_id = #{postId}
    </delete>

</mapper>